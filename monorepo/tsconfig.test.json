{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "temp",
    "rootDir": ".",
    "noEmit": true,
    "composite": false,
    "isolatedDeclarations": false,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@baicie/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "packages/*/__test__",
    "packages/*/*.test.ts",
    "packages/*/*.spec.ts",
    "scripts/setup-vitest.ts"
  ],
  "exclude": [
    "**/dist",
    "**/temp",
    "**/node_modules",
    "**/tsconfig.tsbuildinfo",
    "**/templates/**"
  ]
}
